{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "ES2020",
    "types": ["node", "reflect-metadata"],
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
